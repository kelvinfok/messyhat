<div class="navbar-compensation">
  <div class="container">
  <div class="min-body-height">
    <div class="page-header" align="center">
      <h1>Log In</h1>
    </div>

    <div align="center">
    <%= form_tag sessions_path do %>
    <div class="form-group log-in-bar" align="center">
        <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group log-in-bar">
        <%= text_field_tag :password, nil, type: 'password', class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="form-group actions log-in-bar">
        <%= submit_tag "Sign In", class: 'btn btn-success' %>
    </div>
      </div>
    </div>

    <% end %>


</div>
</div>
</div>
