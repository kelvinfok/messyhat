<div class="navbar-compensation">
  <div class="container">

    <div class="page-header" align="center">
      <h1>Search Results for
        <%= params[:my_skill] %></h1>
    </div>

    <div class="container">
      <div class="row">

        <% @results.each do |result| %>




          <div class="col-lg-3 col-sm-6">

            <div class="card hovercard">
              <div class="cardheader"></div>
              <div class="avatar">
                <%= image_tag result.image.url(:medium), class: 'avatar-round-result' %>
              </div>
              <div class="info">
                <div class="title" , style="font-weight: bold; color: #515151;"><%= result.first_name + " " + result.last_name %></div>
                <div class="desc">Other Skills:<br>
                  <span class="label label-info">Zumba Training</span>
                  <span class="label label-success">Parachuting</span>
                </div>
              </div>
              <div class="bottom">

                <%= link_to "View Profile", result, class: 'btn btn-primary btn-twitter btn-sm' %>

              </div>
            </div>

          </div>








        <% end %>

      </div>
    </div>
  </div>
