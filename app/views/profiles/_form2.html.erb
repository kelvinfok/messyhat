<div class="container">

  <div align="center">
  <%= form_for(@profile) do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>




<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<h2>Complete Profile <small>It's free and always will be.</small></h2>
			<hr class="colorgraph">

			<div class="form-group">
        <%= f.text_field :first_name, class: 'form-control input-lg', placeholder: 'First Name' %>
			</div>

      <div class="form-group">
        <%= f.text_field :last_name, class: 'form-control input-lg', placeholder: 'Last Name' %>
      </div>

      <div class="form-group">
        <%= f.label "Date Of Birth" %><br>
       <%= f.date_select :date_of_birth, start_year: 1950, class: 'form-control' %><br><br>
      </div>

      <div class="form-group">
        <%= f.label "Country" %><br>
        <%= f.select :country, ['Singapore', 'Outside Of Singapore'] %>
      </div>

      <div class="form-group">
      <%= f.label "Skills Looking For" %>
      <%= f.collection_select(:looking_for, @skillset, :id, :name) %>
      </div>

      <div class="form-group">
        <%= f.label "My Skills to offer" %>
        <%= f.collection_select(:my_skill, @skillset, :id, :name) %>
      </div>

      <div class="form-group">
        <%= f.label "Involvement" %>
        <%= f.collection_select(:involvement, @involement, :id, :name) %>
      </div>

			<div class="form-group">
        <%= f.label "Summary about myself" %><br />
        <%= f.text_area :summary, class: 'form-control', rows: '7', placeholder: 'Describe yourself in less than 200 words ..', style: 'font-size'  %>
			</div>



      <div class="form-group">

      </div>

      <div class="form-group">

      </div>

      <div class="form-group">

      </div>

      <div class="form-group">

      </div>

			<hr class="colorgraph">

        <%= f.submit "Complete", class: 'btn btn-success btn-block btn-lg' %>

		</form>
	</div>
</div>


<% end %>

</div>
