<h2 align="center">Sign Up</h2>

<%= form_for @user do |f| %>
<% if @user.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-field-margin-top">
    <%= f.text_field :email, class: 'form-control signing-up-input-email', placeholder: 'Your Email' %><br />
    <%= f.password_field :password, class: 'form-control signing-up-input', placeholder: 'Password' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control signing-up-input', placeholder: 'Confirmation' %>
  </div><br />
  <div class="actions" align="center">
  <%= f.submit "Sign Up", class: 'btn btn-success' %><br /><br />
  <p>By signing up, you agree to comply to our <%= link_to 'terms of use', terms_path %>.</p>
  </div>
  <% end %>
